<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.seriesmanager.app">

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.seriesmanager.app.ui.MainActivity"
            android:label="@string/title_activity_main"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.seriesmanager.app.ui.ShowActivity"
            android:label="@string/title_activity_show"
            android:parentActivityName="com.seriesmanager.app.ui.MainActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name="com.seriesmanager.app.StartActivity"
            android:label="@string/title_activity_start"></activity>
        <activity
            android:name="com.seriesmanager.app.ui.AddShowActivity"
            android:label="@string/title_activity_add_show"></activity>
        <activity
            android:name="com.seriesmanager.app.ui.SearchActivity"
            android:label="@string/title_activity_search"></activity>

    </application>

    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
